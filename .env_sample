# Database Configuration
DB_NAME=household_budget
DB_USER=budget_user
DB_PASSWORD=your_secure_password_here

# OpenID Connect Configuration
OIDC_ISSUER=https://your-oidc-provider.com
OIDC_CLIENT_ID=your_client_id_here
OIDC_CLIENT_SECRET=your_client_secret_here
OIDC_REDIRECT_URI=http://localhost:3333/callback

# Session Configuration
# SESSION_SECRETはセッションCookieの署名に使用される秘密鍵です
# 最低32文字以上のランダムな文字列を設定してください
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# または: openssl rand -hex 32
SESSION_SECRET=your_session_secret_here_minimum_32_characters_long

# Node Environment (optional, defaults to production)
NODE_ENV=production
